<body>

    <div id="game-container">
        <div id="header" class="text-center">
            <h1>Smash the Smiley!</h1>
            <p>Hit the smiley face before time runs out!</p>
        </div>
        <div id="stats" class="flex justify-between rounded-xl shadow-inner mb-4">
            <div id="score" class="text-xl font-bold">Score: 0</div>
            <div id="timer" class="text-xl font-bold">Time: 30s</div>
        </div>
        
        <!-- AD UNIT PLACEHOLDER: This is where you will paste the ad network's code later -->
        <div id="ad-unit">Advertisement Placeholder (320x50 Banner)</div>
        <!-- /AD UNIT PLACEHOLDER -->

        <div id="game-board" class="grid">
            <!-- Holes will be generated here by JavaScript -->
        </div>
        <button id="start-button">Start Game</button>
    </div>

    <!-- Message Box for game over -->
    <div id="message-box" class="message-box"></div>

    <script>
        // --- Firebase Initialization (Required Setup for Canvas Environment) ---
        const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-app-id';
        const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : null;
        // Since this is a simple, stateless game, we won't fully initialize Firebase.

        // --- Tone.js Sound Setup ---
        const synth = new Tone.PolySynth(Tone.Synth).toDestination();

        function playClickSound() {
            if (Tone.context.state !== 'running') { Tone.start(); }
            synth.triggerAttackRelease("C5", "16n", Tone.now(), 0.5);
        }

        function playGameOverSound() {
            if (Tone.context.state !== 'running') { Tone.start(); }
            const now = Tone.now();
            synth.triggerAttackRelease(["C3", "G2"], "4n", now);
            synth.triggerAttackRelease(["F3", "Db3"], "4n", now + 0.5);
        }

        // --- Game State Variables ---
        let score = 0;
        let time = 30;
        let isGameRunning = false;
        let popIntervalId;
        let timerIntervalId;
        let lastHole;

        // --- DOM Elements ---
        const gameBoard = document.getElementById('game-board');
        const startButton = document.getElementById('start-button');
        const scoreDisplay = document.getElementById('score');
        const timerDisplay = document.getElementById('timer');
        const messageBox = document.getElementById('message-box');

        // --- Utility Functions ---
        function randomTime(min, max) {
            return Math.round(Math.random() * (max - min) + min);
        }

        function randomHole(holes) {
            const idx = Math.floor(Math.random() * holes.length);
            const hole = holes[idx];
            if (hole === lastHole) {
                return randomHole(holes);
            }
            lastHole = hole;
            return hole;
        }

        function popUp() {
            if (!isGameRunning) return;

            const holes = Array.from(gameBoard.children);
            const hole = randomHole(holes);
            const timeUp = randomTime(500, 1500);

            hole.classList.add('up');

            setTimeout(() => {
                hole.classList.remove('up');
            }, timeUp);
        }

        function updateDisplay() {
            scoreDisplay.textContent = `Score: ${score}`;
            timerDisplay.textContent = `Time: ${time}s`;
        }

        function handleHit(e) {
            if (!isGameRunning || !e.target.classList.contains('mole')) return;

            e.stopPropagation();
            const hole = e.target.parentElement;

            if (hole.classList.contains('up')) {
                score++;
                playClickSound();
                hole.classList.remove('up');
            }
            updateDisplay();
        }

        // --- Game Flow Functions ---
        function startGame() {
            if (isGameRunning) return;

            isGameRunning = true;
            score = 0;
            time = 30;
            hideMessageBox();
            updateDisplay();

            startButton.textContent = "SMASH!";
            startButton.disabled = true;
            startButton.classList.add('opacity-50');

            popIntervalId = setInterval(popUp, 800);

            timerIntervalId = setInterval(() => {
                time--;
                if (time < 0) time = 0;
                updateDisplay();

                if (time <= 0) {
                    endGame();
                }
            }, 1000);

            if (Tone.context.state !== 'running') { Tone.start(); }
        }

        function endGame() {
            if (!isGameRunning) return;

            isGameRunning = false;
            clearInterval(popIntervalId);
            clearInterval(timerIntervalId);
            playGameOverSound();

            startButton.textContent = "Start Game";
            startButton.disabled = false;
            startButton.classList.remove('opacity-50');

            Array.from(gameBoard.children).forEach(hole => hole.classList.remove('up'));

            showMessageBox(`Game Over! Final Score: ${score}`);
        }

        function showMessageBox(message) {
            messageBox.textContent = message;
            messageBox.style.display = 'block';
        }

        function hideMessageBox() {
            messageBox.style.display = 'none';
        }

        // --- Initialization and Event Listeners ---
        function createHoles() {
            for (let i = 0; i < 9; i++) {
                const hole = document.createElement('div');
                hole.classList.add('hole');
                hole.dataset.id = i;

                const mole = document.createElement('div');
                mole.classList.add('mole');
                mole.textContent = 'ðŸ˜€';

                hole.appendChild(mole);
                gameBoard.appendChild(hole);
            }
        }

        window.onload = function() {
            createHoles();
            updateDisplay();

            startButton.addEventListener('click', startGame);
            gameBoard.addEventListener('click', handleHit);
        };

    </script>
</body>
</html>
